<Window x:Class="Switcheroo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Switcheroo" Width="1200" Height="280"
        Topmost="True"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        BorderThickness="0"
        
        >
    <Border CornerRadius="20" BorderThickness="2" BorderBrush="#FF2F2D36" >
        <DockPanel Background="#A01F1C25">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                <Button x:Name="StartButton" Content="Start Cycling (Ctrl + .)" Click="StartButton_Click" Margin="0,0,12,0" Padding="10,4"/>
                <TextBlock x:Name="SelectedCount" VerticalAlignment="Center" />
                <Button Content="Refresh Windows" Click="RefreshButton_Click" Margin="12,0,0,0" Padding="10,4"/>
            </StackPanel>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <WrapPanel x:Name="WindowPanel" Margin="8" />
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>